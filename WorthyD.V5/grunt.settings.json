{
  "css": {
    "src": "src/content/sass/main.scss",
    "dist": "dest/content/styles/",
    "distfilename": "main",
    "workingdirectory": [
      "src/content/scss/*.scss"
    ]
  },
  "html":{
    "workingdirectory":[
      "src/**/*.html",
      "src/*.html" 
    ]
  },
  "js": {
